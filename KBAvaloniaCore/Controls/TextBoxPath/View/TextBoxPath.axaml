<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="KBAvaloniaCore.Controls.TextBoxPath">

    <Grid x:FieldModifier="private" x:Name="_container" ColumnDefinitions="*, Auto">
        <TextBox x:FieldModifier="private" x:Name="_tbPath" Grid.Column="0" HorizontalAlignment="Stretch" IsReadOnly="True"/>
        <Button x:FieldModifier="private" x:Name="_btSearchPath" Grid.Column="1" Content="..."/>
    </Grid>

</UserControl>
