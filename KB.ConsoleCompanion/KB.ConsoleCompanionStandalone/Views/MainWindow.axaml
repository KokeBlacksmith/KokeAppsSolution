        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Stretch">
            <TextBlock Text="TOOL_BAR" HorizontalAlignment="Stretch" VerticalAlignment="Center" Background="Aqua"/>
