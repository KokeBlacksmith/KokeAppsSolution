<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
             x:Class="KB.ConsoleCompanion.CommandView.CommandItemView"
			 
			 VerticalAlignment="Stretch">

	<Border x:FieldModifier="private" x:Name="_border" 
			Margin="0" CornerRadius="5" VerticalAlignment="Stretch" 
			MinHeight="50" MinWidth="200"
			Padding="10">
		<Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" RowDefinitions="20, *, 15">
			<TextBlock x:FieldModifier="private" x:Name="_typeTextBlock"
					   FontWeight="Bold" 
					   Grid.Row="0" Text="UserInput" VerticalAlignment="Center"/>
			<TextBlock x:FieldModifier="private" x:Name="_messageTextBlock" 
					   Grid.Row="1" Text="Potato" VerticalAlignment="Center"/>
			<TextBlock x:FieldModifier="private" x:Name="_timeTextBlock"
					   Grid.Row="2" Text="12:00" FontSize="10"
					   HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
		</Grid>
	</Border>
</UserControl>

