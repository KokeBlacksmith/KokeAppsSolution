<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:KBGodotBuilderWizard.ViewModels"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="100"
        Width="300" Height="100" WindowStartupLocation="CenterOwner"
        x:Class="KBGodotBuilderWizard.Views.ConfigurationWindow"
        Title="ConfigurationWindow">
    
    <Design.DataContext>
        <vm:ConfigurationWindowViewModel />
    </Design.DataContext>
    
    <Window.DataContext>
        <vm:ConfigurationWindowViewModel />
    </Window.DataContext>
    
    <Grid RowDefinitions="50, 50">
        <TextBox Text="Placeholder text" Margin="{StaticResource AllMargin}"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Content="Save" Margin="{StaticResource AllMargin}"/>
            <Button Content="Cancel" Margin="{StaticResource AllMargin}"/>
        </StackPanel>
    </Grid>
    
    
</Window>
