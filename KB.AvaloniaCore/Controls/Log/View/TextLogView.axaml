<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:KB.AvaloniaCore.Controls;assembly=KB.AvaloniaCore"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="KB.AvaloniaCore.Controls.TextLogView">
    
    
    <local:EnchancedTextBox x:FieldModifier="private" x:Name="_smartTextBox"
                        IsReadOnly="True" TextWrapping="Wrap"
                        HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                        UpdateCaretPositionAtEnd="True"/>
    
</UserControl>
