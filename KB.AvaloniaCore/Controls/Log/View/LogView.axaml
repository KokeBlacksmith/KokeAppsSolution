<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:KB.AvaloniaCore.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="KB.AvaloniaCore.Controls.LogView">
    
    <Grid RowDefinitions="40, *">
        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Content="Clear" Click="_OnClearButtonClick"/>
            <Button Content="Save" Click="_OnSaveButtonClick"/>
        </StackPanel>
        
        <local:TextLogView Grid.Row="1" x:FieldModifier="private" x:Name="_logTextBlock"/>
    </Grid>
</UserControl>
